<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="ghost_white">#f8f8ff</color>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.Light">
		<item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
		<item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/ghost_white</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="switchStyle">@style/Widget.Holo.Light.CompoundButton.Switch</item>
    </style>
    
    <style name="Widget.Styled.ActionBar" parent="@style/Widget.Sherlock.ActionBar.Solid">
         <item name="background">@color/ghost_white</item>
       	 <item name="android:background">@color/ghost_white</item>
    </style>
    
    <style name = "TextAppearance.ActionBar.SearchViewStyle" parent="@style/Widget.Sherlock.Light.SearchAutoCompleteTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:height">50dp</item>
    </style>

</resources>