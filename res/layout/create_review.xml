<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView android:id="@+id/img_user_car"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/test_car_image" />
    
    <com.llc.bumpr.lib.CircularImageView android:id="@+id/img_user"
    	android:layout_width="100dp"
    	android:layout_height="100dp"
    	android:layout_marginTop="150dp"
    	android:layout_centerHorizontal="true"
    	android:src="@drawable/test_image"/>
    
    <RatingBar android:id="@+id/rb_driver_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_create_review"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="1"
        android:stepSize="1" />
    

    
     <Button android:id="@id/btn_create_review"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:background="#e6e6fa"
            android:text="Rate Your Experience!"
            android:textSize="16dp"
            android:onClick="createReview" />


</RelativeLayout>
