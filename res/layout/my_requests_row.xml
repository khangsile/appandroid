<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_request_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="dp" >

    <View android:id="@+id/view_color"
        android:layout_width="10dp"
        android:layout_height="fill_parent" 
        android:layout_alignParentLeft="true"       
        android:background="#ffccee"
        android:minHeight="92dp" />
    
    <com.llc.bumpr.lib.CircularImageView
        android:id="@+id/iv_profile_pic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@id/view_color"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tv_driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_profile_pic"
        android:paddingBottom="-2dp"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_start_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_to_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="3dp"
        android:gravity="right"
        android:paddingBottom="-2dp"
        android:text="@string/to"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_end_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_to_line"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:textSize="17sp"
        android:textStyle="bold" />

</RelativeLayout>